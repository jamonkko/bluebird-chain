{
  "name": "bluebird-chain",
  "version": "0.1.0",
  "description": "Chain utility for promises",
  "main": "lib/bluebird-chain.js",
  "jsnext:main": "src/bluebird-chain.js",
  "files": [
    "lib/bluebird-chain.js",
    "src"
  ],
  "scripts": {
    "test": "mocha --ui tdd",
    "autotest": "mocha --ui tdd --watch",
    "build": "npm run lint && npm test && npm run babel && npm run minify",
    "babel": "babel src/bluebird-chain.js -o lib/bluebird-chain.js",
    "minify": "uglifyjs lib/bluebird-chain.js -c -m -o lib/bluebird-chain.min.js",
    "lint": "eslint src test",
    "cover": "babel-node ./node_modules/.bin/isparta cover _mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jamonkko/node-bluebird-chain.git"
  },
  "keywords": [
    "promise",
    "bluebird",
    "chain",
    "flow",
    "fp"
  ],
  "author": "Jarkko Mönkkönen <jamonkko@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jamonkko/node-bluebird-chain/issues"
  },
  "homepage": "https://github.com/jamonkko/node-bluebird-chain#readme",
  "peerDependencies": {
    "bluebird": ">=0.9.0"
  },
  "devDependencies": {
    "babel-cli": "^6.8.0",
    "babel-eslint": "^6.0.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-rename-umd-globals": "0.0.1",
    "babel-plugin-transform-es2015-modules-umd": "^6.6.5",
    "babel-preset-es2015": "^6.6.0",
    "bluebird": "^3.3.3",
    "chai": "^3.5.0",
    "coveralls": "^2.11.9",
    "eslint": "^2.7.0",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.5.0",
    "estraverse-fb": "^1.3.1",
    "isparta": "^4.0.0",
    "lodash": "^4.6.1",
    "mocha": "^2.4.5",
    "uglify": "^0.1.5"
  }
}
